{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
        </tr>
        </thead>
        <tbody>
        {% for genus in test %}
            <tr>
                <td>{{ genus.name }}</td>
                <a href="{{ path('link_url', {'linkId': genus.id}) }}">
                    {{ genus.name }}
                </a>
                <td>{{ genus.id }}</td>
                <td>{{ genus.updatedAt|date('Y-m-d') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
